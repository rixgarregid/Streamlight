.add-panel
    display none
    padding 30px 25px 25px 25px

    .drop-panel
        display block
        width 620px
        height 315px
        background #3a3a3e
        border-radius 5px
        position relative
        padding 0 !important
        left 50%
        transform translateX(-50%)

        .icon-add
            font-size 50px
            color #fff
            width 100%
            text-align center
            position absolute
            top 80px

        text
            display block
            font-size font-size-medium
            width 100%
            text-align center
            color #fff
            position absolute
            top 170px


    .modal-input
        width 358px
        display inline-block
        box-sizing border-box
        vertical-align middle
        height 38px
        padding 5px 10px
        border 1px solid #000
        background #3a3a3e
        color #fff
        cursor pointer
        float left
        transition .2s
        border-radius 5px

        &:hover
            border 1px solid background-color-active

        &:focus
            outline none

    .submit-name-btn
        display inline-block
        background background-color-active
        color #fff
        border-radius 5px
        width 85px
        float right
        padding 10px 20px
        box-sizing border-box
        vertical-align middle
        cursor pointer
        opacity .8
        transition .2s
        text-align center
        line-height 17px
        margin-right 10px

        &:hover
            opacity 1

    .close-modal-btn
        display inline-block
        width 37px
        height 37px
        float right
        text-align center
        line-height 37px
        vertical-align middle
        transition .1s ease-in-out
        font-size font-size-xlarge
        color #fff

        &:hover
            color rgb(223, 21, 21)
            animation close-modal-btn-animation .2s

        @keyframes close-modal-btn-animation
            0%
                transform rotate(0deg)
            25%
                transform rotate(-15deg)
            75%
                transform rotate(15deg)
            100%
                transform rotate(0deg)
