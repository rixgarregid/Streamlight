.streamlight-app
    display block
    width 680px
    min-height 45px
    max-height 430px
    position relative
    top 30px
    left 50%
    transform translateX(-50%)
    font-family font-family-default
    font-size font-size-normal
    border-radius 5px
    box-shadow 0 0 25px 0 app-shadow-color
    overflow hidden
    transition .3s

::-webkit-scrollbar
    display none
