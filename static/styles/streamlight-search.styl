.streamlight-search
    display flex
    width 100%
    height 45px
    align-items stretch

    .icon-search
        width 45px
        height 45px
        line-height 45px
        font-size 26px
        -webkit-app-region drag

    .input-box
        width 620px
        height 35px
        position absolute
        top 0
        left 45px
        line-height 35px
        font-size font-size-large
        font-family 'Arial' !important
        background transparent
        border none

    .input-placeholder
        width 620px
        height 35px
        padding 5px 0
        position absolute
        top 0
        left 50px
        line-height 35px
        font-size font-size-large

    .result-icon
        display block
        width 35px
        height 35px
        position absolute
        top 50%
        right 10px
        transform translateY(-50%)
