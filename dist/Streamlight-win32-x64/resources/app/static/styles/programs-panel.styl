.add-programs
    display none
    padding 30px

    .drag-drop-panel
        display block
        width 620px
        height 315px
        background #3a3a3e
        border-radius 5px
        position relative

        .icon-add
            font-size 50px
            color #fff
            width 100%
            text-align center
            position absolute
            top 80px

        .label
            display block
            font-size 16px
            width 100%
            text-align center
            color #fff
            position absolute
            top 170px

    .modal
        display block

    .modal-new-program-name
        display none
        width 550px
        height 60px
        box-sizing border-box
        border-radius 5px
        background dark-theme-primary-color
        box-shadow 0 0 20px rgba(0, 0, 0, 0.3)
        border 1px solid #000
        padding 10px 20px
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)

        &.active
            display block
            animation popup .3s

        @keyframes popup
            0%
                transform scale(0.1) translate(-50%, -50%)
                opacity 0
            70%
                transform scale(1.2) translate(-50%, -50%)
                opacity 1
            100%
                transform scale(1) translate(-50%, -50%)

        input
            width 358px
            display inline-block
            box-sizing border-box
            vertical-align middle
            height 38px
            padding 5px 10px
            border 1px solid #000
            background #3a3a3e
            color #fff
            cursor pointer
            float left
            transition .2s
            border-radius 5px

            &:hover
                border 1px solid active-blue-color

            &:focus
                outline none

        .submit-name-btn
            display inline-block
            background active-blue-color
            color #fff
            border-radius 5px
            width 85px
            float right
            padding 10px 20px
            box-sizing border-box
            vertical-align middle
            cursor pointer
            opacity .8
            transition .2s
            text-align center
            line-height 17px
            margin-right 10px

            &:hover
                opacity 1

        .close-modal-btn
            display inline-block
            width 37px
            height 37px
            float right
            text-align center
            line-height 37px
            vertical-align middle
            transition .1s ease-in-out
            font-size 22px
            color #fff

            &:hover
                color rgb(223, 21, 21)
                animation close-modal-btn-animation .2s

            @keyframes close-modal-btn-animation
                0%
                    transform rotate(0deg)
                25%
                    transform rotate(-15deg)
                75%
                    transform rotate(15deg)
                100%
                    transform rotate(0deg)
