.switch-btn
    display: inline-block
    width: 20px
    height: 10px
    background: gray
    border-radius: 30px
    padding: 5px
    transition: all .2s ease-in-out
    cursor: pointer
    margin-left 10px

    .inner-circle
        display: block
        width: 10px
        height: 10px
        background: #fff
        border-radius: 50%
        transition: all .2s ease-in-out

    &.active
        background: active-blue-color

        .inner-circle
            margin-left: 10px

field
    height 30px
    line-height 30px
    display block
    margin-bottom 30px
