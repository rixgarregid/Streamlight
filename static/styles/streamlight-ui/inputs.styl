.input-toggle
    display inline-block
    width 30px
    height 10px
    margin-left 15px
    padding 5px
    background gray
    border-radius 30px
    transition all .2s ease-in-out
    cursor pointer
    vertical-align middle

    .inner-circle
        display block
        width 10px
        height 10px
        background #fff
        border-radius 50%
        transition all .2s ease-in-out

    &.active
        background background-color-active

